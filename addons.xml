<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.ottalpha"
       name="[COLOR red]Over The Top[COLOR white] TV[/COLOR]"
       version="2.7"
       provider-name="OTTTV">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Over The Top TV</summary>
    <language>en</language>
    <description lang="en">OTTTV - Live TV / PPV / Sports / Kids / Movies / Entertainment at an affordable price for all.</description>
     <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.OTTtv" name="[COLOR red ]OTTtv[/COLOR] Repository" version="0.1.4" provider-name="GenTec">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="OTTTV">
            <info compressed="false">https://raw.githubusercontent.com/gentec1/oTTtv/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/gentec1/oTTtv/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.github.com/gentec1/oTTtv/master/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Install My Addons</summary>
            <description>Download and install addons Gen-Tec</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
